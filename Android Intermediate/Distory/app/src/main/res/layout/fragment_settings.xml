<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.settings.SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_200"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ibnu.distory.base.component.SettingButton
        android:id="@+id/btnChangeLanguange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@+id/dividerProfile"
        app:menuIcon="@drawable/ic_language"
        app:menuTitle="@string/action_language_setting"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        style="@style/DistoryButton.WhiteText"
        android:backgroundTint="@color/red_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:minHeight="0dp"
        android:paddingVertical="@dimen/dimen_12dp"
        android:text="@string/action_logout"/>

</LinearLayout>